<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context="com.temperance.app.ProfileActivityAddict">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:text="Hello, Sponsor"
            android:id="@+id/profileWelcome"
            android:textColor="#000"
            android:background="@color/cardview_light_background"
            android:textSize="30sp" />




    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:background="@color/cardview_light_background"
        android:id="@+id/statuscheck"
        android:text="Status Addict"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/calladdict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/cardview_light_background"
        android:padding="20dp"
        android:text="Call Addict"
        android:textSize="30dp" />


</LinearLayout>